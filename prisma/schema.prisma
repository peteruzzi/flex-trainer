generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  workouts      Workout[]
  injuries      Injury[]
  personalRecords PersonalRecord[]
}

model PersonalRecord {
  id           String   @id @default(cuid())
  userId       String
  exerciseName String   // Normalized exercise name (e.g., "bench_press")
  displayName  String   // Display name (e.g., "Bench Press")
  maxWeight    Float    // Max weight in lbs
  date         DateTime @default(now())
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, exerciseName])
  @@index([userId])
}

model Injury {
  id          String    @id @default(cuid())
  userId      String
  bodyArea    String    // shoulder, knee, back, wrist, ankle, hip, neck, elbow, custom
  name        String    // "Left shoulder strain", "Lower back pain", etc.
  severity    String    // mild, moderate, severe
  status      String    // active, recovering, resolved
  notes       String?
  startDate   DateTime  @default(now())
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, status])
}

model Location {
  id        String    @id @default(cuid())
  name      String
  type      String    // studio, box, trail
  createdAt DateTime  @default(now())
  workouts  Workout[]
}

model Workout {
  id         String   @id @default(cuid())
  userId     String
  locationId String?
  date       DateTime @default(now())
  type       String   // pilates, crossfit, strength, mtb
  duration   Int?     // in minutes
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Pilates-specific
  classType String? // hiit, pilates, sculpt

  // CrossFit-specific (stored as JSON array)
  tags String? // JSON array: ["push", "pull", "upper", "lower", "cardio"]

  // Strength-specific (stored as JSON)
  exercises String? // JSON array of exercises

  // MTB-specific
  distance  Float? // in miles
  elevation Float? // in feet
  calories  Int?

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  location Location? @relation(fields: [locationId], references: [id])

  @@index([userId, date])
}
